<?xml version='1.0' encoding='UTF-8'?>
<!-- Created with Cambalache 0.96.3 -->
<interface>
  <!-- interface-name images-page.ui -->
  <requires lib="gtk" version="4.18"/>
  <requires lib="libadwaita" version="1.4"/>
  <template class="NanduImagesPage" parent="GtkBox">
    <property name="orientation">vertical</property>
    <child>
      <object class="AdwToastOverlay" id="toastOverlay">
        <property name="vexpand">True</property>
        <child>
          <object class="GtkStack" id="contentStack">
            <child>
              <object class="GtkStackPage">
                <property name="child">
                  <object class="GtkBox">
                    <property name="halign">center</property>
                    <property name="orientation">vertical</property>
                    <property name="spacing">12</property>
                    <property name="valign">center</property>
                    <child>
                      <object class="GtkSpinner">
                        <property name="height-request">48</property>
                        <property name="spinning">True</property>
                        <property name="width-request">48</property>
                      </object>
                    </child>
                    <child>
                      <object class="GtkLabel">
                        <property name="label">_Loading images...</property>
                        <style>
                          <class name="title-2"/>
                        </style>
                      </object>
                    </child>
                  </object>
                </property>
                <property name="name">loading</property>
              </object>
            </child>
            <child>
              <object class="GtkStackPage">
                <property name="child">
                  <object class="GtkScrolledWindow">
                    <property name="hscrollbar-policy">never</property>
                    <property name="vexpand">True</property>
                    <child>
                      <object class="AdwClamp">
                        <property name="maximum-size">800</property>
                        <property name="tightening-threshold">600</property>
                        <child>
                          <object class="GtkBox">
                            <property name="margin-bottom">12</property>
                            <property name="margin-end">12</property>
                            <property name="margin-start">12</property>
                            <property name="margin-top">12</property>
                            <property name="orientation">vertical</property>
                            <property name="spacing">12</property>
                            <child>
                              <object class="GtkBox" id="optionsBox">
                                <property name="halign">end</property>
                                <property name="spacing">8</property>
                                <child>
                                  <object class="GtkToggleButton" id="groupByTagButton">
                                    <property name="label">Group by Tag</property>
                                    <style>
                                      <class name="flat"/>
                                    </style>
                                  </object>
                                </child>
                              </object>
                            </child>
                            <child>
                              <object class="GtkListBox" id="imageListBox">
                                <property name="selection-mode">none</property>
                                <style>
                                  <class name="boxed-list"/>
                                </style>
                              </object>
                            </child>
                          </object>
                        </child>
                      </object>
                    </child>
                  </object>
                </property>
                <property name="name">list</property>
              </object>
            </child>
            <child>
              <object class="GtkStackPage">
                <property name="child">
                  <object class="AdwStatusPage">
                    <property name="description">Pull some Docker images to see them here</property>
                    <property name="icon-name">drive-harddisk-symbolic</property>
                    <property name="title">No Images Found</property>
                  </object>
                </property>
                <property name="name">empty</property>
              </object>
            </child>
            <child>
              <object class="GtkStackPage">
                <property name="child">
                  <object class="AdwStatusPage" id="errorPage">
                    <property name="description">Failed to connect to Docker daemon</property>
                    <property name="icon-name">dialog-error-symbolic</property>
                    <property name="title">Connection Error</property>
                  </object>
                </property>
                <property name="name">error</property>
              </object>
            </child>
          </object>
        </child>
      </object>
    </child>
  </template>
</interface>
