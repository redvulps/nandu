<interface>
  <!-- interface-name container-manager.ui -->
  <requires lib="adw" version="1.0"/>
  <requires lib="gio" version="2.0"/>
  <requires lib="gtk" version="4.0"/>
  <requires lib="libadwaita" version="1.7"/>
  <template class="NanduContainerManager" parent="AdwWindow">
    <property name="content">
      <object class="GtkBox">
        <property name="orientation">vertical</property>
        <child>
          <object class="AdwHeaderBar">
            <property name="title-widget">
              <object class="AdwViewSwitcherTitle">
                <property name="stack">contentStack</property>
                <property name="title">Container Manager</property>
              </object>
            </property>
            <child type="end">
              <object class="GtkSpinner" id="actionSpinner">
                <property name="spinning">false</property>
                <property name="visible">false</property>
              </object>
            </child>
            <child type="end">
              <object class="GtkMenuButton" id="actionsMenuButton">
                <property name="icon-name">view-more-symbolic</property>
                <property name="menu-model">actions_menu</property>
                <property name="tooltip-text">Container Actions</property>
              </object>
            </child>
          </object>
        </child>
        <child>
          <object class="AdwViewStack" id="contentStack">
            <property name="vexpand">True</property>
            <child>
              <object class="AdwViewStackPage">
                <property name="child">
                  <object class="GtkBox">
                    <property name="margin-bottom">24</property>
                    <property name="margin-end">24</property>
                    <property name="margin-start">24</property>
                    <property name="margin-top">24</property>
                    <property name="orientation">vertical</property>
                    <property name="spacing">12</property>
                    <child>
                      <object class="GtkListBox">
                        <property name="selection-mode">none</property>
                        <child>
                          <object class="AdwActionRow" id="nameRow">
                            <property name="subtitle-selectable">True</property>
                            <property name="title">Name</property>
                            <child type="suffix">
                              <object class="GtkButton" id="copyNameButton">
                                <property name="icon-name">edit-copy-symbolic</property>
                                <property name="tooltip-text">Copy Name</property>
                                <property name="valign">center</property>
                                <style>
                                  <class name="flat"/>
                                </style>
                              </object>
                            </child>
                            <style>
                              <class name="property"/>
                            </style>
                          </object>
                        </child>
                        <child>
                          <object class="AdwActionRow" id="imageRow">
                            <property name="subtitle-selectable">True</property>
                            <property name="title">Image</property>
                            <child type="suffix">
                              <object class="GtkButton" id="copyImageButton">
                                <property name="icon-name">edit-copy-symbolic</property>
                                <property name="tooltip-text">Copy Image</property>
                                <property name="valign">center</property>
                                <style>
                                  <class name="flat"/>
                                </style>
                              </object>
                            </child>
                            <style>
