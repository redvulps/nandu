                          </object>
                        </child>
                        <child>
                          <object class="AdwActionRow" id="statusRow">
                            <property name="subtitle-selectable">True</property>
                            <property name="title">Status</property>
                            <style>
                              <class name="property"/>
                            </style>
                          </object>
                        </child>
                        <child>
                          <object class="AdwActionRow" id="idRow">
                            <property name="subtitle-selectable">True</property>
                            <property name="title">ID</property>
                            <child type="suffix">
                              <object class="GtkButton" id="copyIdButton">
                                <property name="icon-name">edit-copy-symbolic</property>
                                <property name="tooltip-text">Copy ID</property>
                                <property name="valign">center</property>
                                <style>
                                  <class name="flat"/>
                                </style>
                              </object>
                            </child>
                            <style>
                              <class name="property"/>
                            </style>
                          </object>
                        </child>
                        <child>
                          <object class="AdwActionRow" id="commandRow">
                            <property name="subtitle-selectable">True</property>
                            <property name="title">Command</property>
                            <style>
                              <class name="property"/>
                            </style>
                          </object>
                        </child>
                        <child>
                          <object class="AdwActionRow" id="createdRow">
                            <property name="subtitle-selectable">True</property>
                            <property name="title">Created</property>
                            <style>
                              <class name="property"/>
                            </style>
                          </object>
                        </child>
                        <style>
                          <class name="boxed-list"/>
                        </style>
                      </object>
                    </child>
                  </object>
                </property>
                <property name="icon-name">system-run-symbolic</property>
                <property name="name">summary</property>
                <property name="title">Summary</property>
              </object>
            </child>
            <child>
              <object class="AdwViewStackPage">
                <property name="child">
                  <object class="GtkBox">
                    <property name="margin-bottom">24</property>
                    <property name="margin-end">24</property>
                    <property name="margin-start">24</property>
                    <property name="margin-top">24</property>
                    <property name="orientation">vertical</property>
                    <property name="spacing">12</property>
                    <child>
                      <object class="GtkListBox">
                        <property name="selection-mode">none</property>
                        <child>
                          <object class="AdwActionRow" id="sizeRwRow">
                            <property name="subtitle-selectable">True</property>
                            <property name="title">Writable Size</property>
                            <style>
                              <class name="property"/>
                            </style>
                          </object>
                        </child>
                        <child>
                          <object class="AdwActionRow" id="sizeRootFsRow">
                            <property name="subtitle-selectable">True</property>
                            <property name="title">Virtual Size</property>
                            <style>
                              <class name="property"/>
                            </style>
                          </object>
                        </child>
                        <child>
                          <object class="AdwActionRow" id="sizeVolumesRow">
                            <property name="subtitle-selectable">True</property>
                            <property name="title">Volume Size</property>
                            <style>
                              <class name="property"/>
                            </style>
                          </object>
                        </child>
                        <child>
                          <object class="AdwActionRow" id="sizeTotalRow">
                            <property name="subtitle-selectable">True</property>
                            <property name="title">Total Disk Usage</property>
                            <style>
                              <class name="property"/>
                            </style>
                          </object>
                        </child>
                        <style>
                          <class name="boxed-list"/>
                        </style>
                      </object>
                    </child>
                  </object>
                </property>
                <property name="icon-name">drive-harddisk-symbolic</property>
                <property name="name">disk</property>
                <property name="title">Disk Usage</property>
              </object>
            </child>
            <child>
              <object class="AdwViewStackPage">
                <property name="child">
                  <object class="GtkBox">
                    <property name="margin-bottom">24</property>
                    <property name="margin-end">24</property>
                    <property name="margin-start">24</property>
                    <property name="margin-top">24</property>
                    <property name="orientation">vertical</property>
                    <property name="spacing">12</property>
                    <property name="vexpand">True</property>
                    <child>
                      <object class="GtkStack" id="networkStack">
                        <property name="vexpand">True</property>
                        <child>
                          <object class="GtkStackPage">
                            <property name="child">
                              <object class="GtkListBox">
                                <property name="selection-mode">none</property>
                                <property name="valign">start</property>
                                <child>
                                  <object class="AdwActionRow" id="ipRow">
                                    <property name="subtitle-selectable">True</property>
                                    <property name="title">IP Address</property>
                                    <child type="suffix">
                                      <object class="GtkButton" id="copyIpButton">
                                        <property name="icon-name">edit-copy-symbolic</property>
                                        <property name="tooltip-text">Copy IP Address</property>
                                        <property name="valign">center</property>
                                        <style>
